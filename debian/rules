#!/usr/bin/make -f

export PYBUILD_NAME=pitop

%:
	dh $@ --with=sphinxdoc --buildsystem=pybuild

override_dh_auto_test:
	# Don't run the tests!

override_dh_auto_build:
	dh_auto_build
	# Install Python dependencies required to build the docs
	# This is a sub-optimal solution - until we have something better
	python3 -m pip install --upgrade -r ./docs/requirements.txt
	# Fail on warnings; make verbose
	PYTHONPATH=. sphinx-build -W -v -bhtml docs/ build/html
	# PYTHONPATH=. sphinx-build -v -bman  docs/ build/man
